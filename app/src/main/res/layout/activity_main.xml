<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/app_nameAuth"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnDibujo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="@color/Negro"/>

    <Button
        android:id="@+id/btnDibujo"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginVertical="20dp"
        android:textSize="20dp"
        android:text="@string/titulo_dibujo"
        app:layout_constraintBottom_toTopOf="@+id/btnSonido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSonido"
        android:layout_width="200dp"
        android:textSize="20dp"
        android:layout_height="70dp"
        android:text="@string/titulo_sonido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnVideo"
        android:layout_width="200dp"
        android:textSize="20dp"
        android:layout_height="70dp"
        android:layout_marginVertical="20dp"
        android:text="@string/titulo_video"
        app:layout_constraintTop_toBottomOf="@id/btnSonido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
